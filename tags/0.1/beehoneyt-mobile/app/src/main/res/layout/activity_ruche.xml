<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RucheActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nom_ruche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom : " />

        <TextView
            android:id="@+id/topic_ruche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic  : " />

        <TextView
            android:id="@+id/message_ruche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Message  : " />
        <TextView
            android:id="@+id/poids_ruche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="poids : " />

        <TextView
            android:id="@+id/temperature_interieure_ruche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Temperature interieure : " />


        <TextView
            android:id="@+id/temperature_exterieure_ruche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Temperature exterieure : " />

        <TextView
            android:id="@+id/humidite_interieure_ruche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Humidité interieure : " />

        <TextView
            android:id="@+id/humidite_exterieure_ruche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Humidité exterieure : " />

        <TextView
            android:id="@+id/pression_ruche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Pression atmosphérique : " />

        <TextView
            android:id="@+id/ensoleillement_ruche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Ensoleillement​ : " />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>